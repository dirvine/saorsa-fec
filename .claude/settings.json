{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/validate-write.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-write-quality-check.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"[$(date +\"%Y-%m-%d %H:%M:%S\")] \\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/logs/bash-commands.log"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/validate-bash-command.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-write-validation.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/compile-check.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/lint-check.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/log-bash-result.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check-bash-errors.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/prompt-enhancement.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/context-analyzer.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "AgentFinish": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/final-quality-check.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/comprehensive-validation.sh",
            "timeout": 90
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/security-scan.sh",
            "timeout": 45
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/notification_11labs.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[$(date +\"%Y-%m-%d %H:%M:%S\")] ULTRA STRICT QUALITY MODE ACTIVE: Zero tolerance for errors, warnings, or incomplete implementations.' | tee ~/.claude/logs/session-$(date +%Y%m%d-%H%M%S).log"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/session-setup.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[$(date +\"%H:%M:%S\")] Claude Code session started' >> ~/.claude/logs/11labs-hooks.log"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-cleanup.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/generate-session-report.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/stop_11labs.py",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/subagent_stop_11labs.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "_comment": "Auto-generated by fix-settings.py on 2025-08-16"
}